<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CropListDetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menuBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icrop_logo_v2"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    />

                <!-- Solid bottom border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5"
                    android:layout_gravity="bottom"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/formCropPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_circle_bg"
            android:layout_margin="16dp"
            android:padding="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Crop Planner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="30sp"
                    android:textColor="#55a935"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loadImage"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Type : "
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/cropNameDetail"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Reported : "
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/dateTimeReportedDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Test"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Date Planted: "
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/datePlantedDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report ID : "
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/reportIDDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID : "
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/userIDDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harvest Date : "
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateHarvestDetail"
                        android:hint="Edit Harvest Date"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#55a935"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Update Report"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/updateHarvestDate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary_yellow"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="3dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="3dp"
                android:text="Go Back"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/goBackButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>